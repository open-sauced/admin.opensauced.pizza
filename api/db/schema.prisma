datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id        Int      @id @default(autoincrement())
  githubId  Int
  handle    String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
}

model Repository {
  id        Int      @id @default(autoincrement())
  githubId  Int
  fullName  String
  createdAt DateTime @default(now())
}
